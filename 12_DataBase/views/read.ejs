<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Users</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
  </head>
  <body class="bg-gray-900 text-white">
    <div class="container mx-auto px-6 py-10">
      <!-- Title -->
      <h1 class="text-4xl font-bold text-center mb-8 border-b border-gray-700 pb-4 mt-12">
        All Users
      </h1>

      <!-- User Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8 mt-80">
        <% users.forEach(function(user) { %>
        <div
          class="user max-w-72 p-6 bg-slate-800 rounded-xl shadow-lg hover:scale-105 transition-transform duration-300 mt-40"
        >
          <div class="w-full h-72 bg-gradient-to-br from-gray-700 to-red-700 rounded-lg shadow-md overflow-hidden">
            <img
              class="w-full h-full object-cover object-center rounded-lg"
              src="<%= user.image %>"
              alt="User Image"
            />
          </div>

          <!-- User Details -->
          <p class="mt-5 text-lg font-semibold text-center"><%= user.name %></p>
          <h5 class="text-zinc-400 text-sm text-center"><%= user.email %></h5>

          <!-- Action Buttons -->
          <div class="flex justify-center gap-4 mt-5">
            <a class="text-blue-400 hover:text-blue-500 transition" href="/edit/<%= user._id %>">
              ✏ Edit
            </a>
            <a class="text-red-400 hover:text-red-500 transition" href="/delete/<%= user._id %>">
              ❌ Delete
            </a>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>